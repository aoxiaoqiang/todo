{
    "manifest_version": 2,
    "background":
    {
        "persistent": true,
        "scripts": ["./js/background.js"]
    },
    "browser_action":
    {
        "default_icon": "image/logo.png",
        "default_title": "My todo list",
        "default_popup": "option.html"
    },

    "name": "Todo",
    "short_name": "Todo",
    "description": "",
    "version": "1.0.1",
    "icons":
    {
        "128": "image/logo.png"
    },
    "permissions": ["storage", "tabs", "notifications", "webRequest", "webRequestBlocking", "http://*/", "https://*/"]
}